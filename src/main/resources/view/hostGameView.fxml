<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="hr.ipicek.jamb.controller.HostGameController"
            stylesheets="@../style/menu.css"
            prefWidth="600" prefHeight="500">

    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="30" bottom="20"/>
            </padding>

            <Label text="KREIRAJ IGRU" styleClass="title">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="25">
            <padding>
                <Insets left="50" right="50"/>
            </padding>

            <!-- Server Info -->
            <VBox spacing="15" alignment="CENTER"
                  style="-fx-background-color: #f0f0f0; -fx-background-radius: 10; -fx-padding: 20;">

                <Label text="Postavke servera:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <HBox spacing="15" alignment="CENTER">
                    <Label text="Port:"/>
                    <TextField fx:id="txtServerPort" text="8888" prefWidth="100"/>
                </HBox>

                <Button fx:id="btnStartServer" text="Pokreni Server"
                        onAction="#handleStartServer"
                        styleClass="primary-button"
                        prefWidth="200" prefHeight="40">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>
            </VBox>

            <Separator prefWidth="400"/>

            <!-- Game Status -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="Status igre:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="lblGameStatus" text="Server nije pokrenut"
                       style="-fx-font-size: 16px; -fx-text-fill: #666;"/>
            </VBox>

            <!-- Players Count -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="Igrači:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="lblPlayersCount" text="0 / 2"
                       style="-fx-font-size: 20px; -fx-text-fill: #333;">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>
            </VBox>

            <!-- Server Address Info -->
            <VBox spacing="5" alignment="CENTER"
                  style="-fx-background-color: #e8f5e9; -fx-background-radius: 5; -fx-padding: 15;">
                <Label text="Igrači se mogu povezati na:"
                       style="-fx-font-size: 12px; -fx-font-style: italic;"/>
                <Label fx:id="lblServerAddress" text=""
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            </VBox>

            <!-- Start Game Button -->
            <Button fx:id="btnStartGame" text="Pokreni igru"
                    onAction="#handleStartGame"
                    styleClass="primary-button"
                    prefWidth="200" prefHeight="50"
                    disable="true">
                <font>
                    <Font size="16"/>
                </font>
            </Button>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>

            <Button text="Odustani" onAction="#handleCancel"
                    styleClass="secondary-button"
                    prefWidth="100"/>
        </HBox>
    </bottom>
</BorderPane>
