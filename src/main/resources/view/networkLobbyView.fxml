<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="hr.ipicek.jamb.controller.NetworkLobbyController"
            stylesheets="@../style/menu.css"
            prefWidth="600" prefHeight="500">

    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="30" bottom="20"/>
            </padding>

            <Label text="MREŽNA IGRA" styleClass="title">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Label>

            <Label fx:id="lblStatus" text="Nije povezan" styleClass="status-label">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets left="50" right="50"/>
            </padding>

            <!-- RMI Server Configuration -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="RMI Server:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <HBox spacing="10" alignment="CENTER">
                    <Label text="Host:"/>
                    <TextField fx:id="txtRmiHost" text="localhost" prefWidth="150"/>

                    <Label text="Port:"/>
                    <TextField fx:id="txtRmiPort" text="1099" prefWidth="80"/>

                    <Button fx:id="btnConnect" text="Poveži se" onAction="#handleConnect"
                            styleClass="primary-button"/>
                </HBox>

                <CheckBox fx:id="chkUseJNDI" text="Koristi JNDI API (umjesto RMI Registry)"
                          style="-fx-font-size: 12px;"/>
            </VBox>

            <Separator prefWidth="400"/>

            <!-- Player Name -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="Vaše ime:" style="-fx-font-size: 14px;"/>
                <TextField fx:id="txtPlayerName" promptText="Unesite ime igrača"
                           prefWidth="250" alignment="CENTER"/>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="btnHost" text="Kreiraj igru (Host)"
                        onAction="#handleHost"
                        styleClass="primary-button"
                        prefWidth="180" prefHeight="50"
                        disable="true">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>

                <Button fx:id="btnJoin" text="Pridruži se igri"
                        onAction="#handleJoin"
                        styleClass="primary-button"
                        prefWidth="180" prefHeight="50"
                        disable="true">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>
            </HBox>

            <!-- Info Label -->
            <Label fx:id="lblInfo" text=""
                   style="-fx-text-fill: #666; -fx-font-style: italic;"
                   wrapText="true" maxWidth="400"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>

            <Button text="Nazad" onAction="#handleBack"
                    styleClass="secondary-button"
                    prefWidth="100"/>
        </HBox>
    </bottom>
</BorderPane>
