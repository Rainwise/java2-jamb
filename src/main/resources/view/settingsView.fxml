<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hr.ipicek.jamb.controller.SettingsController"
      alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300"
      styleClass="settings-root">

    <Label text="⚙️ Postavke igre" styleClass="settings-title"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints halignment="LEFT"/>
        </columnConstraints>

        <Label text="Ime igrača 1:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPlayer1" promptText="Igrač 1" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Ime igrača 2:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPlayer2" promptText="Igrač 2" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>
    </GridPane>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="btnSave" text="Spremi" styleClass="settings-button"/>
        <Button fx:id="btnCancel" text="Odustani" styleClass="settings-button"/>
    </HBox>

</VBox>